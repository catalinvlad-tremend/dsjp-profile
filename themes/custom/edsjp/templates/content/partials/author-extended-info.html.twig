<div class="author">
  <article{{ attributes.addClass('user', 'user--token') }}>
    {{ author_extended_info }}
    <div class="started-on">
      <span class="hidden-mobile">{{ 'Posted' | t }}</span>
      {% set timestamp = node.getCreatedTime|format_date('custom', 'U') %}
      {% if date(timestamp) < date('-6 days') %}
        <time>{{ node.getCreatedTime|format_date('custom', 'd F Y') }}</time>
      {% else %}
        <time class="time-ago-wrapper" data-date="{{ timestamp }}"></time> <span>{{ 'ago' | t }}</span>
      {% endif %}
    </div>
  </article>
</div>
