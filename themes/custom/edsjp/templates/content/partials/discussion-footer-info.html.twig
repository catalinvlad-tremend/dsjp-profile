<div class="content content-footer">
  <div class="left-side">
    <div{{ author_attributes }}>
      <div class="started-by"><span class="hidden-mobile">{{ 'Created by' | t }}</span>
        {% if node.getOwner.isAnonymous %}
          {{ author_name }}
        {% else %}
          <a href="{{ path('entity.user.canonical', {'user': node.getOwnerId}) }}">{{ author_name }}</a>
        {% endif %}
      </div>
      <span class="delimiter">|</span>
      <span class="hidden-mobile">{{ 'Posted' | t }}</span>
      {% set timestamp = node.getCreatedTime|format_date('custom', 'U') %}
      {% if date(timestamp) < date('-6 days') %}
        <time>{{ node.getCreatedTime|format_date('custom', 'd F Y') }}</time>
      {% else %}
        <time class="time-ago-wrapper" data-date="{{ timestamp }}"></time> <span>{{ 'ago' | t }}</span>
      {% endif %}
    </div>
  </div>
  <div class="right-side">
    <div class="count count-comment"><span><a href="{{ comment_form_url }}">{{ comment_count }}</a></span></div>
    <div class="count count-vote"><span>{{ content.flag_voting }}</span></div>
  </div>
</div>
